{
  "CSS": {
    "beautifiers": [
      "Prettier",
      "Pretty Diff",
      "JS-Beautify"
    ],
    "quotes": "double",
    "wrap_line_length": 80,
    "pragma_insert": true,
    "pragma_require": false
  },
  "HTML": {
    "beautifiers": [
      "Pretty Diff",
      "JS-Beautify"
    ],
    "quotes": "double",
    "wrap_line_length": 0,
    "max_preserve_newlines": 0,
    "indent_inner_html": true,
    "newline_before_tags": [
      "head",
      "body"
    ],
    "wrap_attributes": "force-aligned",
    "wrap_attributes_indent_size": 0
  },
  "JSON": {
    "beautifiers": [
      "Prettier",
      "Pretty Diff",
      "JS-Beautify"
    ],
    "quotes": "double",
    "wrap_line_length": 80,
    "pragma_insert": true,
    "pragma_require": false
  },
  "JavaScript": {
    "beautifiers": [
      "Prettier",
      "Pretty Diff",
      "JS-Beautify",
      "ESLint"
    ],
    "quotes": "double",
    "wrap_line_length": 80,
    "max_preserve_newlines": 0,
    "pragma_insert": true,
    "pragma_require": false,
    "arrow_parens": "always",
    "comma_first": true,
    "remove_trailing_whitespace": true
  },
  "Markdown": {
    "beautifiers": [
      "Prettier"
    ],
    "wrap_line_length": 80,
    "pragma_insert": true,
    "pragma_require": false
  }
}
