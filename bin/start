#!/usr/bin/env bash

# Test is AppleScript works and the Terminal applciation exists.
t=$(osascript -e 'exists application "Terminal"')

# Open the servers.
if [[ $? -eq 0 ]] && [[ $t -eq "true" ]]
then
    osascript -e 'tell application "Terminal" to do script "cd '$(pwd)'/src/client; npm run start"'
    osascript -e 'tell application "Terminal" to do script "cd '$(pwd)'/src/server; npm run start"'
fi

open http://localhost:8080
