#!/usr/bin/env bash

root=$(pwd)
echo "$root"

# Refine scope to specific directories.
dir=("" "src/client" "src/server")
for i in "${dir[@]}"
do
    cd $root/$i

    echo "Cleaning /$i..."

    # Remove files ingored by Git.
    cat $root/.gitignore | while read line
    do
        if [[ ${#line} -ne 0 ]]
        then
            rm -rf "$line"
        fi
    done
done

unset dir
echo 'Clean.'
