#!/usr/bin/env bash

while [ "${1:-}" != "" ]; do
    case "$1" in
        "-d" | "--dryrun") # Alias for no flag
        ;;
        "-u" | "--upgrade")
        upgrade=1
        ;;
    esac
    shift
done

if [[ $upgrade -eq 1 ]]
then
    npx ncu --upgrade
    npx ncu --packageFile src/app/package.json --upgrade
    npx ncu --packageFile src/server/package.json --upgrade
else
    npx ncu
    npx ncu --packageFile src/app/package.json
    npx ncu --packageFile src/server/package.json

    echo "Run npm run packages:upgrade -- --upgrade to upgrade package.json"
fi
